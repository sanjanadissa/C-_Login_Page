<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="751" Width="1090"
         WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Window.Resources>
        <Style x:Key="ButtonStyle1" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="White" BorderBrush="Gray" BorderThickness="0" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonStyle2" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="White" BorderBrush="Gray" BorderThickness="0" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonStyle3" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="White" BorderBrush="Gray" BorderThickness="0" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Border Background="{StaticResource {x:Static SystemColors.WindowBrushKey}}" 
            CornerRadius="40" >
        <Border.Clip>
            <RectangleGeometry RadiusX="20" RadiusY="20" Rect="0,0,1090,751"/>
        </Border.Clip>
        <Canvas ClipToBounds="True" Margin="-552,0,0,0">
            <Rectangle Width="881" Height="878" Fill="#FFF2E7CC" RadiusX="165.879" RadiusY="165.879"
                  Canvas.Left="265" Canvas.Top="-62" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-35.275"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Image


            Width="606" Canvas.Top="169" Source="Assets/—Pngtree—business office team meeting project_7183397.png" RenderTransformOrigin="0.717,0.454" x:Name="image" Canvas.Left="1106" Height="520" HorizontalAlignment="Left" VerticalAlignment="Center" />


            <Button Style="{DynamicResource ButtonStyle3}" Content="LogIn" Height="47" Canvas.Left="671" Canvas.Top="482" Width="332" Click="Button_Click_1" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Normal" HorizontalAlignment="Center" FontSize="22" >
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup Name="CommonStates">
                        <VisualState Name="Normal"/>
                        <VisualState Name="MouseOver">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                    To="LightBlue" Duration="0:0:0.2"/>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Button>
            <Button>

            </Button>

            <Grid Canvas.Left="667" Canvas.Top="430" Width="332" Height="47">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="31*"/>
                    <ColumnDefinition Width="135*"/>
                </Grid.ColumnDefinitions>
                <!-- Placeholder Text -->

                <PasswordBox x:Name="PasswordBox"
             Width="332"
             Height="47"
             BorderThickness="0"
             PasswordChanged="PasswordBox_PasswordChanged"
             VerticalContentAlignment="Center"
             HorizontalContentAlignment="Center"
             Margin="0,-27,0,27" Grid.ColumnSpan="3">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="PasswordBox">
                                        <Border Background="White" 
                                BorderBrush="Gray" 
                                BorderThickness="0" 
                                CornerRadius="20">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              Padding="10,0"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

            </Grid>
            <TextBox Canvas.Left="742" TextWrapping="Wrap" Text="Sign In" Canvas.Top="224" Width="182" TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="53" FontWeight="Bold" Height="75" Foreground="#FF4621E0" RenderTransformOrigin="0.723,-0.526">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border BorderBrush="Gray" BorderThickness="0" CornerRadius="10">
                                        <ScrollViewer x:Name="PART_ContentHost" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>


            <TextBox Canvas.Left="899" TextWrapping="Wrap" Text="Forgot Password?" Canvas.Top="456" Width="120" TextChanged="TextBox_TextChanged_1" HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border BorderBrush="Gray" BorderThickness="0" CornerRadius="10">
                                        <ScrollViewer x:Name="PART_ContentHost" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <TextBox Canvas.Left="694" TextWrapping="Wrap" Text="Don't have an account?" Canvas.Top="540" Width="164" TextChanged="TextBox_TextChanged_1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" FontWeight="DemiBold">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border BorderBrush="Gray" BorderThickness="0" CornerRadius="10">
                                        <ScrollViewer x:Name="PART_ContentHost" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <Button Content="Sign Up&#xA;" Height="22" Canvas.Left="876" Canvas.Top="543" Width="116" Click="Button_Click_1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" FontWeight="DemiBold" RenderTransformOrigin="0.379,-2.18">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border BorderBrush="Gray" BorderThickness="0" CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Grid Canvas.Left="667" Canvas.Top="359" Width="332" Height="47">

                <!-- TextBox for Username -->
                <TextBox x:Name="UsernameTextBox" TextWrapping="Wrap" TextChanged="TextBox_TextChanged_2" VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center" VerticalContentAlignment="Center" Height="48" Width="332" Margin="0,-21,0,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="White" BorderBrush="White" BorderThickness="1" CornerRadius="20">
                                            <ScrollViewer x:Name="PART_ContentHost" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Grid>

            <StackPanel x:Name="contentPanel" Height="58" Width="315" Canvas.Top="333" Canvas.Left="680"  Orientation="Horizontal" Panel.ZIndex="10" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock x:Name="UsernamePlaceholder2" Text="Username" Panel.ZIndex="10" Foreground="Gray" FontSize="18" Height="25" Width="92" Margin="0,0,180,0"/>
                <Image x:Name="imag" Source="/Assets/c0e442423a5dde61b9fa68e858ed26f8.png" Width="38" Height="30" />
            </StackPanel>
            <StackPanel x:Name="contentPanelpass" Height="58" Width="315" Canvas.Top="398" Canvas.Left="680"  Orientation="Horizontal" Panel.ZIndex="10" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock x:Name="UsernamePlaceholder1" Text="Password" Panel.ZIndex="10" Foreground="Gray" FontSize="18" Height="25" Width="92" Margin="0,0,180,0"/>
                <Image x:Name="imag1" Source="/Assets/947757aa4f401c5c46d196283a55c386.png" Width="38" Height="30" />
            </StackPanel>


        </Canvas>
    </Border>



</Window>
